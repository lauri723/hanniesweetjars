
  
  <div class="form-item form-item-listing">
    <label>Variety</label>
    <select name="section" style="color: var(--color-three);">
      <% sections.forEach(section => { %>
        <% if (section.id === listing.section) { %>
          <option selected label="<%= section.name %>" value="<%= section.id %>">
        <% } else { %>
          <option label="<%= section.name %>" value="<%= section.id %>">
        <% } %>
      <% }) %>
    </select>
  </div>
